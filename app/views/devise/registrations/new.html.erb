<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

 <!---heading---->
     <header class="heading"> Registration-Form</header><hr></hr>
  <!---Form starting----> 
  <div class="row ">
   <!--- For Name---->
         <div class="col-sm-12">
             <div class="row">
           <div class="col-xs-4">
                     <label class="firstname">Name :</label> </div>
             <div class="col-xs-8">
                 <%= f.input :name, autofocus: true %>
             </div>
          </div>
     </div>
     
     
         
     <!-----For email---->
     <div class="col-sm-12">
         <div class="row">
           <div class="col-xs-4">
                 <label class="mail" >Email :</label></div>
           <div class="col-xs-8"  >  
                <%= f.input :email, autofocus: true, autocomplete: "email" %>
             </div>
         </div>
     </div>
   <!-----For Password and confirm password---->
          <div class="col-sm-12">
             <div class="row">
             <div class="col-xs-4">
                    <label class="pass">Password :</label></div>
          <div class="col-xs-8">
                   <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.input :password, autocomplete: "new-password",label:" "%>
         </div>
          </div>
      </div>


      <div class="col-sm-12">
             <div class="row">
             <div class="col-xs-4">
                    <label class="pass">Confirm Password:</label></div>
          <div class="col-xs-8">
                   <%= f.input :password_confirmation, autocomplete: "new-password" %>
         </div>
          </div>
      
      
     <!-----------For Phone number-------->
         <div class="col-sm-12">
         <div class ="row">
                 <div class="col-xs-4 ">
             <label class="gender">Gender:</label>
         </div>
       
           <div class="col-xs-4 male">   
              <%= f.radio_button :is_female, '0' %> <%= f.label :is_female, "Male" %>
         </div>
         
         <div class="col-xs-4 female">
              <%= f.radio_button :is_female, '1' %> <%= f.label :is_female,"Female" %> 
           </div>
      
         </div>
         
     </div>
   </div>  
         
     

    <div class="actions">
    <%= f.submit "Sign up" , class: "btn btn-primary"%>
  <%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name),class: "btn btn-primary"%>
  </div>
<% end -%>

</div>
