        <tr>
            <th style="width: 50.66%;height: 40px">Topics</th>
            <th>Votes</th>
            <th>Submitted by</th>
            <th>Replies</th>
            <th>Views</th>
            <th>Activity</th>
        </tr>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td>
                    <%= link_to post.title, post %>
                        </br>
                        <td>
                            <td>
